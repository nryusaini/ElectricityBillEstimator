<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/primaryColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Select Month"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/primaryColor"
            android:backgroundTint="@color/primaryColor"
            android:theme="@style/SpinnerTheme" />

        <TextView
            android:text="Enter Electricity Units (kWh)"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editTextUnits"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 300"
            android:textColor="@color/accentColor"
            android:textColorHint="@color/accentColor"
            android:backgroundTint="@color/accentColor" />

        <TextView
            android:text="Select Rebate Percentage"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/radioGroupRebate"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton android:id="@+id/radio0" android:text="0%" android:textColor="@color/black"/>
            <RadioButton android:id="@+id/radio1" android:text="1%" android:textColor="@color/black"/>
            <RadioButton android:id="@+id/radio2" android:text="2%" android:textColor="@color/black"/>
            <RadioButton android:id="@+id/radio3" android:text="3%" android:textColor="@color/black"/>
            <RadioButton android:id="@+id/radio4" android:text="4%" android:textColor="@color/black"/>
            <RadioButton android:id="@+id/radio5" android:text="5%" android:textColor="@color/black"/>
        </RadioGroup>

        <Button
            android:id="@+id/buttonCalculate"
            android:text="Calculate"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewTotalCharges"
            android:textColor="@color/black"
            android:text="Total Charges: RM 0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewFinalCost"
            android:textColor="@color/black"
            android:text="Final Cost: RM 0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonSave"
            android:text="Save"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonViewHistory"
            android:text="View History"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
